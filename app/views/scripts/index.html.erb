<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<h1>Scripts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Passed</th>
      <th>Last run at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scripts.each do |script| %>
      <tr>
        <td><%= script.name %></td>
        <td><%= script.description %></td>
        <td><%= script.passed %></td>
        <td><%= script.passed_at %></td>
        <td><%= link_to 'Show', script %></td>
        <td><%= link_to 'Run', script_run_path(script) %></td>
        <td><%= link_to 'Edit', edit_script_path(script) %></td>
        <td><%= link_to 'Destroy', script, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Script', new_script_path %>
